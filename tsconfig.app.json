{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "tsBuildInfoFile": "node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "types": ["vite/client"]
  },
  "include": [
    "src/**/*",
    "components/**/*",
    "hooks/**/*",
    "lib/**/*",
    "services/**/*",
    "stores/**/*",
    "types/**/*",
    "utils/**/*",
    "contexts/**/*",
    "src/main.tsx",
    "src/App.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "coverage",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/__tests__/**"
  ]
}
